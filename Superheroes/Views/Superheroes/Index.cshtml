@model IEnumerable<Superheroes.Models.Superhero>

@{
    ViewBag.Title = "Index";
}

<h2>Index of Superheroes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">


@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HeroName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlterEgo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrimaryAbility)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SecondaryAbility)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CatchPhrase)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.HeroId }) |
            @Html.ActionLink("Details", "Details", new { id = item.HeroId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.HeroId })
        </td>
    </tr>
}

</table>
